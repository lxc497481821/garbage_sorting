/* pages/guide/guide.wxss */
.guide_head{
  display: flex;
  height: 2.2rem;
  line-height: 2.2rem;
  justify-content: space-around;
  margin-bottom: 1rem;
  margin-top: 0.5rem;
} 
.guide_head>view{
  width:3.5rem;
  height: 2.2rem;
  box-sizing: border-box;
  padding: 1px 0;
  line-height: 2.2rem;
  margin-bottom: 1rem;
} 
.guide_head>.weizhi>view{
  float: right;
  margin-left:-0.5rem; 
  font-weight: 600;
}
.guide_head>.weizhi>image{
  width: 1.2rem;
  height: 1.2rem;
  margin-top: 0.5rem;
  margin-right: 0.1rem;
}

.guide_head>.search{
  height: 2.2rem;
  width: 70%;
  margin-left: 1rem;
  background: #ddd;
  border-radius:20px;
  padding: 0.45rem 1rem;
}
.guide_head>.search>image{
  float: left;
  width: 1.2rem;
  height: 1.2rem;
}
.guide_head>.search>input{
  float:left;
  width: 80%;
  margin-left: 0.5rem;
}
.annunciate>view{
	padding: 0;
}

.Page_body{
	display: flex;
	background: #ddd;
}
.Page_body .left{
	width: 20%;
}
.Page_body .right{
	width: 80%;
	padding: 0.5rem;
}