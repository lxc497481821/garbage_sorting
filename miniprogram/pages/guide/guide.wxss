/* pages/guide/guide.wxss */
.headline{
  font-size:1.2rem;
  margin-bottom: 1rem;
}
.guide_head{
  display: flex;
  height: 2.2rem;
  line-height: 2.2rem;
  justify-content: space-around;
  margin-bottom: 1rem;
} 
.guide_head>view{
  width:3.5rem;
  height: 2.2rem;
  box-sizing: border-box;
  padding: 1px 0;
  line-height: 2.2rem;
  margin-bottom: 1rem;
} 
.guide_head>.weizhi>view{
  float: right;
  margin-left:-0.5rem; 
}
.guide_head>.weizhi>image{
  width: 1.2rem;
  height: 1.2rem;
  margin-top: 0.5rem;
  margin-right: 0.1rem;
}

.guide_head>.search{
  height: 2.2rem;
  width: 70%;
  margin-left: 1rem;
  background: #ddd;
  border-radius:20px;
  padding: 0.45rem 1rem;
}
.guide_head>.search>image{
  float: left;
  width: 1.2rem;
  height: 1.2rem;
}
.guide_head>.search>input{
  float:left;
  width: 80%;
  margin-left: 0.5rem;
}

.publicity{
  width: 100%;
  height: 1.2rem;
  padding: 0.1rem 0;
  overflow: hidden;
  background: #E6BD1A;
  display: block;
  position: relative;
}
.publicity >text{
  line-height: 1.55rem;
  width: 250%;
  font-size: 0.8rem; 
  white-space: nowrap;
  top: 0;
  position: absolute;
}
